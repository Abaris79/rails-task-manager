<div class="text-center"><h1>Liste des tâches</h1>
<p>Il y a du boulot</p>
<br>
<p><%= link_to "Créer une nouvelle tâche", task_new_path %></p>
<% @tasks.each do |task| %>
  <h2><%=  link_to task.name, task_path(task) %></h2>
    <%= form_for task do |f| %>
    <p>Mark as done : <%= f.check_box :done %></p>
    <% end %>
<% end %>

</div>

